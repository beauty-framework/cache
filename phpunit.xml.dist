<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php"
         colors="true"
         verbose="true"
         stopOnFailure="false"
         failOnRisky="true"
         failOnWarning="true"
         testdox="true"
>
    <testsuites>
        <testsuite name="Repositories">
            <directory>tests/Repositories</directory>
        </testsuite>
    </testsuites>

    <php>
        <env name="CACHE_DRIVER" value="memory"/>
    </php>
</phpunit>
